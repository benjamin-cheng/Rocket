<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:paddingBottom="72dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="203dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="6sp"
                android:text="@string/theme_settings_title"
                android:textColor="@color/paletteLightBlack100"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="sans-serif"
                android:text="@string/theme_settings_subtitle"
                android:textColor="@color/paletteDarkGreyD100"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/theme_image_view_guideline_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.08" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/theme_image_view_guideline_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.92" />

            <ImageView
                android:id="@+id/theme_image_view_1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/background_theme_button_1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/ripple_circle"
                android:padding="8dp"
                android:scaleType="center"
                android:src="@drawable/button_theme_check"
                android:tint="@android:color/white"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintEnd_toStartOf="@+id/theme_image_view_2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@id/theme_image_view_guideline_start"
                app:layout_constraintTop_toBottomOf="@id/message"
                app:layout_constraintBottom_toTopOf="@+id/action_done" />

            <ImageView
                android:id="@+id/theme_image_view_2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/background_theme_button_2"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/ripple_circle"
                android:padding="8dp"
                android:scaleType="center"
                android:src="@drawable/button_theme_check"
                android:tint="@android:color/white"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintEnd_toStartOf="@+id/theme_image_view_3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@id/theme_image_view_1"
                app:layout_constraintTop_toTopOf="@id/theme_image_view_1" />

            <ImageView
                android:id="@+id/theme_image_view_3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/background_theme_button_3"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/ripple_circle"
                android:padding="8dp"
                android:scaleType="center"
                android:src="@drawable/button_theme_check"
                android:tint="@android:color/white"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintEnd_toStartOf="@+id/theme_image_view_4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@id/theme_image_view_2"
                app:layout_constraintTop_toTopOf="@id/theme_image_view_1" />

            <ImageView
                android:id="@+id/theme_image_view_4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/background_theme_button_4"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/ripple_circle"
                android:padding="8dp"
                android:scaleType="center"
                android:src="@drawable/button_theme_check"
                android:tint="@android:color/white"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintEnd_toStartOf="@+id/theme_image_view_5"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@id/theme_image_view_3"
                app:layout_constraintTop_toTopOf="@id/theme_image_view_1" />

            <ImageView
                android:id="@+id/theme_image_view_5"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/background_theme_button_5"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/ripple_circle"
                android:padding="8dp"
                android:scaleType="center"
                android:src="@drawable/button_theme_dark"
                android:tint="@color/button_dark_theme_tint_color"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintEnd_toEndOf="@id/theme_image_view_guideline_end"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/theme_image_view_4"
                app:layout_constraintTop_toTopOf="@id/theme_image_view_1" />

            <TextView
                android:id="@+id/action_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-medium"
                android:padding="8dp"
                android:text="@string/button_done"
                android:textAllCaps="true"
                android:textColor="@color/paletteDarkBlueC100"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>